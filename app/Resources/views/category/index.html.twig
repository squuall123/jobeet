{% extends 'base.html.twig' %}

{% block body %}
    <div class="jumbotron">
        <div class="container">
            <center> <h1>Categories list</h1></center>
        </div>
    </div>
   
    <div class="container">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Nom</th>
                <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                     {% for category in categories %}
                    <tr>
                        <td>{{ category.nom }}</td>
                        <td>
                        
                            <a href="{{ path('category_show', { 'id': category.id }) }}" class="btn btn-info">show</a><br><br>
                        
                        {% if is_granted('ROLE_ADMIN')%}
                        
                            <a href="{{ path('category_edit', { 'id': category.id }) }}" class="btn btn-warning">edit</a>
                        
                    {% endif %}
                    </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
        <nav aria-label="...">
  <ul class="pager">
    <li class="previous"><a href="{{ path('category_new') }}" ><span aria-hidden="true">&larr;</span>Create a new category</a></li>
            </ul>
        </nav>
    </div>
     
    
{% endblock %}
